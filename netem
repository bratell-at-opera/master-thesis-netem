#!/bin/bash

netemFolder=$(realpath $(dirname $0))
myUser=$USER

# Handle in-arguments
for i in "$@"
do
    case $i in
        # Debug mode does not initialize a virtual display
        -d|--debug)
            debugMode=true
            shift # past argument=value
            ;;
    esac
done

# ------------------ RUN


# Setup a webserver of some sort
sudo ip netns exec server-ns nginx -p $(realpath $(dirname .)) -c config/netem.nginx.conf

# Run browser
if [ "$debugMode" != true ]; then
    sudo ip netns exec client-ns2 su $myUser -c "$netemFolder/browser-controller/starter.bash"
else
    sudo ip netns exec client-ns2 su $myUser -c "$netemFolder/browser-controller/starter.bash --with-gui"
fi

# ----------------- TEARDOWN
# Close web server of some sort
sudo kill -QUIT $( cat /tmp/netem.nginx.pid )

